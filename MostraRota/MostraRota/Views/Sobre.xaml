<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MostraRota.Views.Sobre"
             Title="Sobre o MostraRota">
    <ContentPage.Content>
        <StackLayout Margin="5,0,5,0" VerticalOptions="Center" HorizontalOptions="Fill">
            <Image Source="rota.png"/>
            <Label Text="Aplicativo MostraRota" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" HeightRequest="40"
                   FontAttributes="Bold" FontSize="Large"/>
            <Label Text="Copyright (c) 2017" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" HeightRequest="25" />
            <Label Text="Powered by Xamarin (R)" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" HeightRequest="25" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>