<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MostraRota.Views.Sincronizar"
             Title="Sincronizar">
    <ContentPage.Content>
        <StackLayout Margin="5,0,5,0" VerticalOptions="Center" HorizontalOptions="Fill">
            <Image Source="sinc.png"/>
            
            <!-- indicador de atividade em segundo plano -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="DarkBlue" HeightRequest="25"/>
            
            <Button Text="SINCRONIZAR" Clicked="OnSincronizar_Clicked"
                    BackgroundColor="#3c5a98" TextColor="White" HeightRequest="45" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>